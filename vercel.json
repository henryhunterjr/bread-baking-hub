{
  "outputDirectory": "dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/recipes/:slug",
      "destination": "/api/recipe-share?slug=:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|FacebookBot|Twitterbot|LinkedInBot|WhatsApp|FBAN|FBAV|MessengerForiOS|Instagram).*"
        }
      ]
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/blog-share?slug=:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|FacebookBot|Twitterbot|LinkedInBot|WhatsApp|FBAN|FBAV|MessengerForiOS|Instagram).*"
        }
      ]
    }
  ],
  "headers": [
    {
      "source": "/fonts/(.*)\\.woff2",
      "headers": [
        { "key": "Content-Type", "value": "font/woff2" },
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" },
        { "key": "Access-Control-Allow-Origin", "value": "*" }
      ]
    },
    {
      "source": "/(.*)\\.(png|jpg|jpeg|webp|svg|avif)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)\\.(js|css)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    }
  ]
}
