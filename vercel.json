{
  "rewrites": [
    {
      "source": "/recipes/:slug",
      "destination": "/api/recipe-share?slug=:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|FacebookBot|Twitterbot|LinkedInBot|WhatsApp).*"
        }
      ]
    },
    {
      "source": "/blog/:slug",
      "destination": "/api/blog-share?slug=:slug",
      "has": [
        {
          "type": "header",
          "key": "user-agent",
          "value": ".*(facebookexternalhit|Facebot|FacebookBot|Twitterbot|LinkedInBot|WhatsApp).*"
        }
      ]
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
